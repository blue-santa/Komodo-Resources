<!DOCTYPE html>
<html>
  <head>
    <% include ../partials/head.ejs %>
    <title>Edit <%= thirdTopic.title %>: Komodo Resources</title>
  </head>
  <body>
    <div class="flex-container">
      <main class="content">
        <h1>Edit Third Topic</h1>
        <form action="/primaryTopics/<%= thirdTopic.primaryTopicId %>/secondaryTopics/<%= thirdTopic.secondaryTopicId %>/thirdTopics/<%= thirdTopic.id %>/update" method="post">
          <div class="form-group">
            <label for="title">Enter New Title</label>
            <input type="text" value="<%= thirdTopic.title %>" class="form-control" name="title" placeholder="enter new title" required>
          </div>
          <div class="form-group">
            <label for="content">Enter New Content</label>
            <textarea rows="4" class="form-control" name="content" placeholder="enter new content" required><%= thirdTopic.content %></textarea>
          </div>
          <button type="submit" class="btn">Update</button>
        </form>
      </main>
    </div>
    <% include ../partials/baseScripts.ejs %>
  </body>
</html>
