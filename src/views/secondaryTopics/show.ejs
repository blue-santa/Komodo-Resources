<!DOCTYPE html>
<html>
  <head>
      <% include ../partials/head.ejs %>
      <title><%= secondaryTopic.title %>: Komodo Resources</title>
  </head>
  <body>
    <div class="flex-container">
      <% include ../partials/navbar.ejs %>

      <main class="content">
        <div class="site-title content-flex-container unique-row breadcrumb">
            <i class="fas fa-angle-right breadcrumb-link"></i>
          <a href="/primaryTopics/<%= secondaryTopic.primaryTopicId %>" class="breadcrumb-link"><%= topicTree[secondaryTopic.primaryTopicId - 1].title %></a>
            <i class="fas fa-angle-right breadcrumb-link"></i>
          <a href="/primaryTopics/<%= secondaryTopic.primaryTopicId %>/secondaryTopics/<%= secondaryTopic.id %>" class="breadcrumb-link"><%= topicTree[secondaryTopic.primaryTopicId - 1].secondaryTopics[secondaryTopic.id - 1].title %></a>
        </div>
        <div class="site-content">
          <hr>
          <p><%- secondaryTopic.content %></p>
          <hr>
          <h1>Third Topics</h1>
          <ul class="list-group">
            <% secondaryTopic.thirdTopics.forEach((thirdTopic) => { %>
              <li class="topic-list">
                <a href="/primaryTopics/<%= thirdTopic.primaryTopicId %>/secondaryTopics/<%= thirdTopic.secondaryTopicId %>/thirdTopics/<%= thirdTopic.id %>"><%= thirdTopic.title %></a>
              </li>
            <% }); %>
          </ul>
          <hr>
          <div class="site-footer">
            <h3><span class="copyright-symbol">&#9400;</span><%= (new Date()).getFullYear() %> Komodo Platform</h3>
          </div>
        </div>
      </main>
    </div>
    <% include ../partials/baseScripts.ejs %>
  </body>
</html>
