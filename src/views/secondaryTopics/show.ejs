<!DOCTYPE html>
<html>
  <head>
      <% include ../partials/head.ejs %>
      <title><%= secondaryTopic.title %>: Komodo Resources</title>
  </head>
  <body>
    <div class="flex-container">
      <% include ../partials/navbar.ejs %>

      <main class="content">
        <div class="site-content content-flex-container unique-row">
          <h1><%= secondaryTopic.title %></h1>
          <form action='/primaryTopics/<%= secondaryTopic.primaryTopicId %>/secondaryTopics/<%= secondaryTopic.id %>/edit' method='get'>
            <button type="submit" class="btn">Edit</button>
          </form>
          <form action='/primaryTopics/<%= secondaryTopic.primaryTopicId %>/secondaryTopics/<%= secondaryTopic.id %>/delete' method='post'>
            <button type="submit" class="btn btn-danger">Delete</button>
          </form>
        </div>
        <div class="site-content">
          <p><%- secondaryTopic.content %></p>
        </div>
      </main>
    </div>
    <% include ../partials/baseScripts.ejs %>
  </body>
</html>
