<!DOCTYPE html>
<html>
  <head>
    <% include ../partials/head.ejs %>
  </head>
  <body>
    <div class="flex-container">
      <% include ../partials/navbar.ejs %>
      <main class="site-content">
        <h1>Edit Secondary Topic</h1>
        <form action="/primaryTopics/<%= secondaryTopic.primaryTopicId %>/secondaryTopics/<%= secondaryTopic.id %>/update" method="post">
          <div class="form-group">
            <label for="title">Enter New Title</label>
            <input type="text" value="<%= secondaryTopic.title %>" class="form-control" name="title" placeholder="enter new title" required>
          </div>
          <div class="form-group">
            <label for="content">Enter New Content</label>
            <textarea rows="4" class="form-control" name="content" placeholder="enter new content" required><%= secondaryTopic.content %></textarea>
          </div>
          <button type="submit" class="btn">Update</button>
        </form>
      </main>
    </div>
    <% include ../partials/baseScripts.ejs %>
  </body>
</html>
