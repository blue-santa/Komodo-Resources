<!DOCTYPE html>
<html>
  <head>
    <% include ../partials/head.ejs %>
  </head>
  <body>
    <div class="flex-container">
    <% include ../partials/navbar.ejs %>
      <main class="content">

        <h1>Edit Primary Topic</h1>
        <form action="/primaryTopics/<%= primaryTopic.id %>/update" method="post">
          <div class="form-group">
            <label for="title">Primary Topic Title</label>
            <input value="<%= primaryTopic.title %>" type="text" class="form-control" name="title" placeholder="<%= primaryTopic.title %>" required>
          </div>
          <div class="form-group">
            <label for="content">Primary Topic Content</label>
            <input value="<%= primaryTopic.content %>" type="text" class="form-control" name="content" placeholder="<%= primaryTopic.content %>" required>
          </div>
          <button type="submit" class="button">Update</button>
        </form>
      </main>
      <% include ../partials/baseScripts.ejs %>
    </div>
  </body>
</html>
